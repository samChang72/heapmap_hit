{
  "name": "heapmap-sdk",
  "version": "1.0.0",
  "description": "A TypeScript SDK for tracking user click interactions on web pages",
  "main": "dist/heapmap.js",
  "module": "dist/heapmap.esm.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build:webpack && npm run build:types",
    "build:webpack": "webpack --mode=production",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "webpack --mode=development --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "analytics",
    "tracking",
    "click-tracking",
    "heatmap",
    "user-behavior"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "typescript": "^5.0.0",
    "ts-loader": "^9.0.0",
    "@types/node": "^20.0.0"
  }
}